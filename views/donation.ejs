    <!-- -------------------NGO Info---------------------- -->
    <main>
    <h1>List of NGO's looking for Volunteers</h1>
    <div class="container-fluid my-5" id="ngo">
        
        <% var len,i,j=0;
        if(size%2==0)
        len=size/2;
        else
        len=size/2; 
        
        for(i=0;i<len;i++) 
        { 
            var temp=array[j]; %>

        <div class="row mb-3 mt-5">

            <div class="col-1"></div>

            <div class="col-4 card">
                <div class="card-body">
                    <h5 class="card-title"><%= temp.Name %></h5>
                    <p class="card-text">
                        <span>Address:</span> <%= temp.Address %> <br>
                        <span>Phone:</span> <%= temp.Phone %> <br>
                    </p>
                    <div class="d-flex justify-content-center">
                        <a target="blank_" href="<%=temp.Website%>"><i class="icon fas fa-globe"></i></a>
                        <a target="blank_" href="<%=temp.Instagram%>"><i class="icon fab fa-instagram"></i></a>
                        <a target="blank_" href="<%=temp.Facebook%>"><i class="icon fab fa-facebook-square"></i></a>
                        <a target="blank_" href="<%=temp.Geolocation%>"><i class="icon fas fa-map-marker-alt"></i></a>
                    </div>
                    <br>
                    <div class="d-flex justify-content-around">
                        <form action="/volunteer/<%=temp.Name%>" style="width: fit-content;"><button type="submit" class="but3">Volunteer</button></form>
                    </div>
                </div>
            </div>

            <% j++; 
            if(j<size){
            temp=array[j];
            %>

            <div class="col-1"></div>

            <div class="col-4 card">
                <div class="card-body">
                    <h5 class="card-title"><%= temp.Name %></h5>
                    <p class="card-text">
                        <span>Address:</span> <%= temp.Address %>  <br>
                        <span>Phone:</span> <%= temp.Phone %>  <br>
                    </p>
                    <div class="d-flex justify-content-center">
                        <a target="blank_" href="<%=temp.Website%>"><i class="icon fas fa-globe"></i></a>
                        <a target="blank_" href="<%=temp.Instagram%>"><i class="icon fab fa-instagram"></i></a>
                        <a target="blank_" href="<%=temp.Facebook%>"><i class="icon fab fa-facebook-square"></i></a>
                        <a target="blank_" href="<%=temp.Geolocation%>"><i class="icon fas fa-map-marker-alt"></i></a>
                    </div>
                    <br>
                    <div class="d-flex justify-content-around">
                        <form action="/volunteer/<%=temp.Name%>" style="width: fit-content;"><button type="submit" class="but3">Volunteer</button></form>
                    </div>
                </div>
            </div>
        </div>
        <%j++;
        }}%>
    </div>
